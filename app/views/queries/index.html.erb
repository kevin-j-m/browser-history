<div class="flex flex-wrap w-full">
  <h1 class="w-full leading-8 text-5xl pb-3">
    Search History
  </h1>
  <div class="flex w-full items-baseline">
    <p class="text-xl pb-7 pl-3">
      Searches: <%= @queries.load.size %>
    </p>

    <%= link_to "Clear", SearchHistory.new, class: "ml-7 rounded bg-primary hover:bg-primaryhover text-white font-bold py-2 px-4 my-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>

  <% @queries.each do |query| %>
    <div id="<%= dom_id query %>" class="w-full">
      <h2 class="w-full text-3xl"><%= link_to query.search_term, query, class: "underline" %></h2>
      <div class="pl-3 py-2">
        <%= render(DateAndTimeComponent.new(timestamp: query.searched_at)) %>
      </div>

      <% if query.comments.any? %>
        <h3 class="w-full text-xl pb-2 pl-3">Comments</h3>

        <div class="pl-6">
          <%= render query.comments %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
