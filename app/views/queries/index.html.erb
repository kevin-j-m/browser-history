<h1>Search History</h1>
<h2>Searches: <%= @queries.load.size %></h2>

<% @queries.each do |query| %>
  <div id="<%= dom_id query %>">
    <div>
      <%= query.search_term %>
    </div>
    <div>
      <p><%= l(query.searched_at, format: :date) %></p>
      <p><%= l(query.searched_at, format: :time_of_day) %></p>
    </div>
  </div>
<% end %>
