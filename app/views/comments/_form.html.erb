<%= form_with model: [commentable, comment], id: dom_id(comment) do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message|%>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form.rich_text_area :body  %>
  <%= form.submit %>
<% end %>
